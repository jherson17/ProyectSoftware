@model ProyectSoftware.Web.Data.Entities.Author
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_MyLayout.cshtml"; /* forma para que en ves del tener el layout normal tenga el otro */
}
}

<div class="pagetitle">
    <h1>Edit GenderType</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Dashboard">Home</a></li>
            <li class="breadcrumb-item active"><a asp-action="Index">Author</a></li>
            <li class="breadcrumb-item active">Author</li>
            <li class="breadcrumb-item active">Edit Author</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<section class="section dashboard">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Edit Author</h5>

            <!-- Floating Labels Form -->
            <form class="row g-3" asp-action="Update" method="POST">
                <input type="hidden" asp-for="StageName" />


                <div class="col-md-12">
                    <div class="form-floating">
                        <input asp-for="StageName" class="form-control" placeholder="@Html.DisplayFor(model => model.StageName)">
                        <label>@(Html.DisplayNameFor(model => model.StageName))</label>
                        <span asp-validation-for="StageName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-floating">
                        <input asp-for="Name" class="form-control" placeholder="@Html.DisplayFor(model => model.Name)">
                        <label>@(Html.DisplayNameFor(model => model.Name))</label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-floating">
                        <input asp-for="LastName" class="form-control" placeholder="@Html.DisplayFor(model => model.LastName)">
                        <label>@(Html.DisplayNameFor(model => model.LastName))</label>
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <a asp-action="Index" class="btn btn-secondary">return</a>
                </div>
            </form><!-- End floating Labels Form -->

        </div>
    </div>
</section>