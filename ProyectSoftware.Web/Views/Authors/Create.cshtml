@model ProyectSoftware.Web.Data.Entities.Author
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_MyLayout.cshtml"; /* forma para que en ves del tener el layout normal tenga el otro */
}



<div class="pagetitle">
    <h1>Dashboard</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-asp-controller="Home" asp-action="Dashboard">Home</a></li>
            <li class="breadcrumb-item active"><a asp-action="Index">GenderType</a></li>
            <li class="breadcrumb-item active">GendeType</li>
            <li class="breadcrumb-item active">New GenderType</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<section class="section dashboard">
            <form class="row g-3" asp-action="Create" method="POST">
                    <div class="col-md-12">
                        <div class="form-floating">
                            <input asp-for="Name" class="form-control" placeholder="@Html.DisplayFor(model => model.Name)">
                            <label>@(Html.DisplayFor(model => model.Name)) Name </label>
                            <span asp-validation-for="Name" class="Text-Danger"></span>
                        </div>
                    </div>
                <div class="form-floating">
                    <input asp-for="LastName" class="form-control" placeholder="@Html.DisplayFor(model => model.LastName)">
                <label>@(Html.DisplayNameFor(model => model.LastName)) LastName </label>
                    <span asp-validation-for="LastName" class="Text-Danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="StageName" class="form-control" placeholder="@Html.DisplayFor(model => model.StageName)">
            <label>@(Html.DisplayNameFor(model => model.StageName)) StageName </label>
                    <span asp-validation-for="StageName" class="Text-Danger"></span>
                </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Submit</button>
                <a asp-action="Index" class="btn btn-secondary">return</a>
            </div>
            </form>
</section>


