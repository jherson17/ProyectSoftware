@model ProyectSoftware.Web.Data.Entities.User
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_MyLayout.cshtml"; /* forma para que en ves del tener el layout normal tenga el otro */
}

<div class="pagetitle">
    <h1>Dashboard</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-asp-controller="Home" asp-action="Dashboard">Home</a></li>
            <li class="breadcrumb-item active"><a asp-action="Index">Users</a></li>
            <li class="breadcrumb-item active">New Users</li>
        </ol>
    </nav>
</div><!-- End Page Title -->


   

    <section class="section dashboard">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">New User</h5>

                <!-- Floating Labels Form -->
                <form class="row g-3" asp-action="Create" method="POST">
                    <div class="col-md-12">
                        <div class="form-floating">
                            <input asp-for="Name" class="form-control" placeholder="@Html.DisplayFor(model => model.Name)">
                        <label>@(Html.DisplayNameFor(model => model.Name)) Name </label>
                            <span asp-validation-for="Name" class="Text-Danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                        <input asp-for="Email" class="form-control" placeholder="@Html.DisplayFor(model => model.Email)">
                        <label>@(Html.DisplayNameFor(model => model.Email)) Email </label>
                        <span asp-validation-for="Email" class="Text-Danger"></span>
                        </div>
                        </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                        <input asp-for="Password" class="form-control" placeholder="@Html.DisplayFor(model => model.Password)">
                        <label>@(Html.DisplayNameFor(model => model.Password)) Password </label>
                        <span asp-validation-for="Password" class="Text-Danger"></span>
                        </div>
                    </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Edad" class="form-control" placeholder="@Html.DisplayFor(model => model.Edad)">
                        <label>@(Html.DisplayNameFor(model => model.Edad)) Edad </label>
                        <span asp-validation-for="Edad" class="Text-Danger"></span>
                    </div>
                </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <a asp-action="Index" class="btn btn-secondary">return</a>
                    </div>
                </form><!-- End floating Labels Form -->

                </div>
            </div> 
        </section>

