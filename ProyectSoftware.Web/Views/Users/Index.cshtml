@model IEnumerable<ProyectSoftware.Web.Data.Entities.User>

@{
    ViewData["Title"] = "Index"; // Establece el título de la página.
    Layout = "~/Views/Shared/_MyLayout.cshtml"; /* forma para que en ves del tener el layout normal tenga el otro */
}
@* //estan heredando de layaout *@
<div class="pagetitle">
    <h1>Dashboard</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-asp-controller="Home" asp-action="Dashboard">Home</a></li>
            <li class="breadcrumb-item active">Dashboard</li>
        </ol>
    </nav>
    

</div><!-- End Page Title -->

<section class="section dashboard">
    <div class="card">
        <div class="card-header py-3">
            <h3 class="m-0 font-weight-bold text-primary col-md-11">User</h3>
            <div>
                <a asp-action="Create" class="btn btn-primary">New User</a>
            </div>
        </div>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Users</h5>
            <!-- Table Variants -->
            <table class="table table-bordered">
                <thead class="table-primary">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.Password)</th>
                        <th>@Html.DisplayNameFor(model => model.Email)</th>
                        <th>@Html.DisplayNameFor(model => model.Edad)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="table-secondary">
                            <td>@Html.DisplayFor(modelItem => @item.Name)</td>
                            <td>@Html.DisplayFor(modelItem => @item.Password)</td>
                            <td>@Html.DisplayFor(modelItem => @item.Email)</td>
                            <td>@Html.DisplayFor(modelItem => @item.Edad)</td>
                        </tr>
                    }
                </tbody>
            </table>
            <!-- End Table Variants -->
        </div>
    </div>
    <!-- End Table Variants -->
</section>

